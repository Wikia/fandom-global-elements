<div class="site-head-container site-head-headroom site-head-headroom-top">
  <div class="site-head-wrapper">
    <nav class="site-head">
      <div class="site-head__nav-icon-wrapper">
        <a href="#" class="site-head-icon site-head-icon-nav icon-button">
          {{> ../svg class="icon-button-icon wds-icons-menu" image="wds-icons-menu"}}
          {{> ../svg class="icon-button-icon wds-icons-cross is-hidden" image="wds-icons-cross"}}
        </a>
      </div>
      <div class="site-logo">
        <a href="{{wikiaHomepage}}">
          {{> ../svg class="fandom-logo" image="wds-company-logo-fandom"}}
        </a>
      </div>
      <div class="site-head-icon-search {{#searchHidden}}hidden-search{{/searchHidden}}">
        <a href="#" class="site-head-icon icon-button">
          {{> ../svg class="icon-button-icon" image="wds-icons-magnifying-glass"}}
        </a>
      </div>
    </nav>
  </div>
  <div class="site-head-fandom-bar-wrapper">
    <div class="site-head-fandom-bar">
      <a href="{{wikiaHomepage}}">
        {{> ../svg class="fandom-bar-logo" image="wds-company-logo-powered-by-wikia"}}
      </a>
    </div>
  </div>
  <div id="site-head-sub-header" class="{{!--unless displayFandomBar "site-head-fandom-bar-hidden"--}}"></div>
</div>
{{> side-nav-drawers }}
